{% extends "base.html.twig" %}


{% block title %}{% endblock %}


{% block body %}

	<div class="row">
		<div class="col-12 mx-auto">
			<h1 class="text-center my-3">Chambre de luxe Confort</h1>
		</div>
	</div>
	<hr>

   	<section
		class="container">
		{# ------------------------ #}
		{% for chambre in chambres %}
		{# ------------------------ #}
			<div class="row">
				<div class="col-4">
					<img src="{{ asset('uploads/' ~ chambre.photo) }}" class="card-img-top" alt="...">
				</div>
				<div class="col-8 my-4 reservation">
					<h1>{{ chambre.titre }}</h1>
					<p>{{ chambre.descriptionCourte }}</p>
					<p>
					<span>{{ chambre.prixJournalier }}</span> €
					</p>
					 <a classe="reservation" href="{{ path('app_reservation', {'id': chambre.id} ) }}">Réserver</a>
				</div>
			</div>
			<br>
		{# ------------------------ #}
		{% endfor %}
		{# ------------------------ #}
		          
	</section>

{% endblock %}
